
<% content_for :additional_css do %>
  <%= stylesheet_link_tag 'user_index', media: 'all' %>
<% end %>
<div class="user-index">

  <h1>Welcome to My App</h1>

  <% if user_signed_in? %>
    <p>Hello, <%= current_user.email %>!</p>
    <%= link_to 'Edit profile', edit_user_registration_path, class: 'user-link' %>
    <%= button_to "Logout", destroy_user_session_path, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'user-button' %>
    <%= link_to 'Posts', posts_path, class: 'user-link' %>
  <% else %>
    <%= link_to 'Sign up', new_user_registration_path, class: 'user-link' %>
    <%= link_to 'Login', new_user_session_path, class: 'user-link' %>
  <% end %>
</div>
