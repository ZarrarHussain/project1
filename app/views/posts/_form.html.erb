<%= javascript_include_tag 'image_preview' %>


<%= form_for @post, html: { class: 'styled-form', multipart: true }, remote: true do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'form-label' %><br>
    <%= f.text_field :title, class: 'form-input' %><br>
  </div>
  <div class="form-group">
    <%= f.label :body, class: 'form-label' %><br>
    <%= f.text_area :body, class: 'form-textarea' %><br>
  </div>
  <div class="form-group">
    <%= f.label :image, 'Upload Image', class: 'form-label' %><br>
    <%= f.file_field :image, class: 'form-input', id: 'image-upload' %><br>
    <div id="image-preview"></div> 
  </div>
  <%= f.submit 'Submit', class: 'form-submit' %>
<% end %>

